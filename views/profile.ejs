<main class="max-w-screen-xl px-16 mx-auto">
     <!-- Profile Section -->
  <section class="max-w-screen-xl px-16 py-8 mx-auto mt-20">
    <div class="w-1/2 mx-auto bg-white shadow-md rounded-lg p-8 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-semibold mb-6 text-gray-800">User Profile</h1>
        <ul class="font-semibold text-gray-800">
          <li><span>Email:</span> <%= user.email %></li>
          <li><span class="">Phone:</span> <%= user.phone %></li>
          <li><span class="">Role:</span> <%= user.role %></li>
          <li><span class="">Gender:</span> <%= user.gender %></li>
          <li><span class="">Location:</span> <%= user.location %></li>
        </ul>
      </div>
    </div>
    <a href="/" class="w-1/2 mx-auto block mt-6 bg-teal-600 text-white hover:bg-teal-700 duration-300 px-8 py-2 rounded text-center">Back to Home</a>
  </section>
</main>
      
